<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="thruster_macro" params="thruster_id *origin">
    <link name="thruster_${thruster_id}">

      <visual>
      <origin xyz="0.025 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.01 0.1"/>
        </geometry>
      </visual>

      <visual>
        <origin xyz="0 0 0" rpy="0 ${pi/2} 0"/>
        <geometry>
          <cylinder radius="0.01" length="0.05"/>
        </geometry>
      </visual>

      <inertial>
        <mass value="0.001" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000000017" ixy="0.0" ixz="0.0"
               iyy="0.000000017" iyz="0.0"
               izz="0.000000017" />
      </inertial>
    </link>

    <!-- Joint between thruster link and vehicle base link -->
    <joint name="thruster_${thruster_id}_joint" type="continuous">
      <xacro:insert_block name="origin" />
      <axis xyz="1 0 0" />
      <parent link="base_link" />
      <child link="thruster_${thruster_id}" />
    </joint>

    <transmission name="thruster_${thruster_id}_transmission" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="thruster_${thruster_id}_joint">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="thruster_${thruster_id}_joint_motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <gazebo>
      <!-- Thruster ROS plugin -->
      <plugin name="${thruster_id}_thruster_model" filename="libuuv_thruster_ros_plugin.so">
        <thrusterID>${thruster_id}</thrusterID>
        <linkName>thruster_${thruster_id}</linkName>

        <jointName>thruster_${thruster_id}_joint</jointName>

        <thrustTopic>thrusters/${thruster_id}/thrust</thrustTopic>

        <inputTopic>thrusters/${thruster_id}/input</inputTopic>

        <gain>1</gain>

        <clampMax>1</clampMax>

        <clampMin>-1</clampMin>

   
        <thrust_efficiency>1</thrust_efficiency>

        <propeller_efficiency>1</propeller_efficiency>

        <dynamics>
          <type>ZeroOrder</type>
        </dynamics>

        <conversion>
          <type>Basic</type>
          <rotorConstant>1</rotorConstant>
        </conversion>


      </plugin>
    </gazebo>

    <gazebo reference="thruster_${thruster_id}">
      <selfCollide>false</selfCollide>
    </gazebo>
  </xacro:macro>

</robot>